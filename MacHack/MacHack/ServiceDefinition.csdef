<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="MacHack" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2012-10.1.8">
  <WebRole name="MvcWebRole1" vmsize="Small">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
  </WebRole>
  <WorkerRole name="RavenWorkerRole" vmsize="Small">
    <Runtime executionContext="elevated" />
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <Endpoints>
      <InputEndpoint name="Raven" protocol="http" port="8080" localPort="8080" />
    </Endpoints>
    <LocalResources>
      <LocalStorage name="RavenCache" cleanOnRoleRecycle="false" sizeInMB="1024" />
    </LocalResources>
  </WorkerRole>
</ServiceDefinition>